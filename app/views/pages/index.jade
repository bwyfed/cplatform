extends ../layout

block content
  #myCarousel.carousel.slide
    ol.carousel-indicators
      li.active(data-target="#myCarousel", data-slide-to="0")
      li(data-target="#myCarousel", data-slide-to="1")
      li(data-target="#myCarousel", data-slide-to="2")
    .carousel-inner(role="listbox")
      .item.active
        img(src="/images/kl.jpg")
        //.carousel-caption 第一张宽连图
      .item
        img(src="/images/kl.jpg")
        //.carousel-caption 第二张宽连图
      .item
        img(src="/images/kl.jpg")
        //.carousel-caption 第三张宽连图

  mixin onesection(info,type)
    .one-section
      .row.title-row
        .title-item.img
          img.title1-img(src="/images/title1.png")
        .title-item.title1.title-item #{info.title1}
        .title-item.title2.title-item #{info.title2}
      if type
        p haha
      if block
        block
      .row.separator
        img(src="/images/separator.png")

  .container.index-sections
    +onesection({
        title1: '服务',
        title2: 'Service'
    })
      .row
        .col-md-4
          a(href="/second/service/solution").thumbnail
            img(src='images/index/service-solution.png')
          .cate-name.text-center 解决方案
        .col-md-4
          a(href="/second/service/product").thumbnail
            img(src='images/index/service-product.png')
          .cate-name.text-center 产品技术
        .col-md-4
          a(href="/second/service/operate").thumbnail
            img(src='images/index/service-operate.png')
          .cate-name.text-center 运营服务

    +onesection({
        title1: '行业及解决方案',
        title2: 'Industry and Solutions'
    })
      .row
        a(href="/second/industry").img.thumbnail
          img(src="images/index/industry.png")

    +onesection({
        title1: '合作客户',
        title2: 'Cooperative customers'
    })
      .row
        a(href="/second/customers").img.thumbnail
          img(src="images/index/customers.png")
