extends ../layout

block content
  #myCarousel.carousel.slide
    ol.carousel-indicators
      li.active(data-target="#myCarousel", data-slide-to="0")
      li(data-target="#myCarousel", data-slide-to="1")
      li(data-target="#myCarousel", data-slide-to="2")
    .carousel-inner(role="listbox")
      .item.active
        img(src="/images/kl.jpg")
        .carousel-caption 第一张宽连图
      .item
        img(src="/images/kl.jpg")
        .carousel-caption 第二张宽连图
      .item
        img(src="/images/kl.jpg")
        .carousel-caption 第三张宽连图
  .container
    include ../includes/index-section
  h1= title
  p Welcome to #{title}

  mixin lesson
    p immoc jade study
  +lesson
  mixin study(name, courses)
    p #{name} study
    ul.courses
      each course in courses
        li= course
  +study('tom', ['jade', 'node'])

  mixin group(student)
    h4 #{student.name}
    +study(student.name, student.courses)
  +group({name: 'tom',courses:['jade', 'node', 'express']})

  mixin team(slogon)
    h4 #{slogon}
    if block
      block
    else
      p no team

  +team('slogon')
    p Good job!

  mixin attr(name)
    p(class!=attributes.class) #{name}

  +attr('attrname')(class='magic')

  mixin attrs(name)
    p&attributes(attributes) #{name}

  +attrs('attrsname')(class='magic2', id='attrsid')

  mixin magic(name, ...items)
    ul(class='#{name}')
      each item in items
        li= item

  +magic('magic', 'node', 'jade', 'express', '..')